{
  "manifest_version": 3,
  "name": "MangaLib Extension",
  "version": "1.1.0",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lib.social/*",
        "https://anilib.me/*",
        "https://mangalib.me/*",
        "https://ranobelib.me/*",
        "https://hentailib.me/*",
        "https://slashlib.me/*",
        "https://test-front.anilib.me/*",
        "https://test-front.mangalib.me/*",
        "https://test-front.ranobelib.me/*",
        "https://test-front.hentailib.me/*",
        "https://test-front.slashlib.me/*"
      ],
      "js": []
    }
  ],
  "action": {
    "default_icon": {
      "48": "assets/icons/icon-48.png"
    },
    "default_popup": "popup.html",
    "icon": "assets/icons/icon-48.png"
  },
  "permissions": [
    "storage"
  ]
}
